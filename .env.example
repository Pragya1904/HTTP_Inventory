# Copy to .env and adjust for local/dev.
# .env is gitignored.

# Database (generic: host, port, user, password)
DATABASE_HOST=mongo
DATABASE_PORT=27017
DATABASE_USER=
DATABASE_PASSWORD=

# Broker / publisher (generic: host, port, user, password)
BROKER_HOST=rabbitmq
BROKER_PORT=5672
BROKER_USER=guest
BROKER_PASSWORD=guest

QUEUE_NAME=metadata_queue
QUEUE_MAX_LENGTH=1000

MAX_RETRIES=3
PREFETCH_COUNT=1

INITIAL_BACKOFF_SECONDS=1
MAX_BACKOFF_SECONDS=30
MAX_CONNECTION_ATTEMPTS=10
BACKOFF_MULTIPLIER=2

# Database: increase in slow or congested environments
DATABASE_CONNECTION_TIMEOUT_MS=5000

# Publisher: timeout for publish confirm (seconds)
PUBLISH_TIMEOUT_SECONDS=10

# Readiness: max seconds to wait for DB ping in /health/ready (avoids hanging when DB is down)
READINESS_PING_TIMEOUT_SECONDS=30
