FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

WORKDIR /workspace
ENV PYTHONPATH=/workspace

COPY api/requirements.txt /workspace/api/requirements.txt
COPY requirements-dev.txt /workspace/requirements-dev.txt
RUN pip install --no-cache-dir -r /workspace/api/requirements.txt -r /workspace/requirements-dev.txt

COPY . /workspace

CMD ["pytest", "-m", "integration"]

